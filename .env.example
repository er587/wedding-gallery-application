# Wedding Gallery Environment Configuration Template
# Copy this to .env and update with your actual values

# ============================================================================
# DJANGO CORE SETTINGS
# ============================================================================

# SECURITY WARNING: Generate a unique secret key for production!
# You can generate one at: https://djecrety.ir/
SECRET_KEY=django-insecure-your-secret-key-here-change-this-in-production

# SECURITY WARNING: Don't run with debug turned on in production!
DEBUG=True

# Comma-separated list of allowed hostnames
# For production, add your domain: your-domain.com,www.your-domain.com
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0

# ============================================================================
# DATABASE CONFIGURATION  
# ============================================================================

# For development (default SQLite)
# DATABASE_URL=sqlite:///db.sqlite3

# For production (PostgreSQL recommended)
# DATABASE_URL=postgres://username:password@localhost:5432/wedding_gallery

# For Railway/Heroku (will be set automatically)
# DATABASE_URL will be provided by the platform

# ============================================================================
# WEDDING CUSTOMIZATION
# ============================================================================

# Customize these for your wedding
WEDDING_COUPLE_NAME="Sarah & John"
WEDDING_DATE="June 15, 2025"
WEDDING_VENUE="Sunset Garden Venue"
WEDDING_HASHTAG="#SarahAndJohn2025"

# Gallery settings
WEDDING_TITLE="Our Wedding Gallery"
WEDDING_DESCRIPTION="Share your beautiful memories from our special day!"

# ============================================================================
# MEDIA AND STATIC FILES
# ============================================================================

# For local development (default)
MEDIA_ROOT=media/
STATIC_ROOT=static/

# For production deployment
# MEDIA_ROOT=/var/www/wedding-gallery/media/
# STATIC_ROOT=/var/www/wedding-gallery/static/

# Cloud storage (optional)
# AWS_ACCESS_KEY_ID=your-aws-access-key
# AWS_SECRET_ACCESS_KEY=your-aws-secret-key
# AWS_STORAGE_BUCKET_NAME=your-wedding-photos-bucket
# AWS_S3_REGION_NAME=us-east-1

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================

# Email backend for notifications
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend

# For production email (SMTP)
# EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USE_TLS=True
# EMAIL_HOST_USER=your-email@gmail.com
# EMAIL_HOST_PASSWORD=your-app-password

# Default from email
DEFAULT_FROM_EMAIL=noreply@your-domain.com
SERVER_EMAIL=admin@your-domain.com

# ============================================================================
# SECURITY SETTINGS (Production)
# ============================================================================

# HTTPS/SSL Settings (set to True for production with HTTPS)
SECURE_SSL_REDIRECT=False
SECURE_BROWSER_XSS_FILTER=True
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False

# Session settings
SESSION_COOKIE_SECURE=False
CSRF_COOKIE_SECURE=False

# For production, set these to True:
# SECURE_SSL_REDIRECT=True
# SESSION_COOKIE_SECURE=True
# CSRF_COOKIE_SECURE=True
# SECURE_HSTS_SECONDS=31536000
# SECURE_HSTS_INCLUDE_SUBDOMAINS=True
# SECURE_HSTS_PRELOAD=True

# ============================================================================
# CORS CONFIGURATION
# ============================================================================

# Frontend URLs that can access the API
CORS_ALLOWED_ORIGINS=http://localhost:5000,http://127.0.0.1:5000

# For production, add your frontend domains:
# CORS_ALLOWED_ORIGINS=https://your-domain.com,https://www.your-domain.com,http://localhost:5000

# CORS headers
CORS_ALLOW_CREDENTIALS=True
# SECURITY: Set to False in production! Only True for development
CORS_ALLOW_ALL_ORIGINS=False

# ============================================================================
# FILE UPLOAD SETTINGS
# ============================================================================

# Maximum file size for uploads (in bytes)
# 10MB = 10485760 bytes
FILE_UPLOAD_MAX_MEMORY_SIZE=10485760
DATA_UPLOAD_MAX_MEMORY_SIZE=10485760

# Allowed file extensions
ALLOWED_IMAGE_EXTENSIONS=jpg,jpeg,png,webp,gif,bmp,tiff

# ============================================================================
# INVITATION CODE SETTINGS
# ============================================================================

# Default invitation code settings
DEFAULT_INVITATION_USES=10
INVITATION_CODE_LENGTH=8

# Auto-create default invitation codes on startup
CREATE_DEFAULT_INVITATIONS=True

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Cache configuration (for production)
# CACHE_BACKEND=django.core.cache.backends.redis.RedisCache
# CACHE_LOCATION=redis://127.0.0.1:6379/1

# Image optimization
THUMBNAIL_SIZE=300
THUMBNAIL_QUALITY=85
IMAGE_COMPRESSION_QUALITY=90

# API pagination
DEFAULT_PAGE_SIZE=12
MAX_PAGE_SIZE=100

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================

# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO

# Log file location (for production)
LOG_FILE=logs/wedding-gallery.log

# ============================================================================
# DEVELOPMENT TOOLS
# ============================================================================

# Django Debug Toolbar (development only)
ENABLE_DEBUG_TOOLBAR=False

# Admin interface customization
ADMIN_SITE_HEADER="Wedding Gallery Administration"
ADMIN_SITE_TITLE="Wedding Gallery Admin"

# ============================================================================
# PLATFORM-SPECIFIC SETTINGS
# ============================================================================

# Railway deployment
# Most settings will be auto-configured by Railway

# Heroku deployment
# Most settings will be auto-configured by Heroku

# Docker deployment
# POSTGRES_DB=wedding_gallery
# POSTGRES_USER=wedding
# POSTGRES_PASSWORD=change-this-password

# ============================================================================
# MONITORING & ANALYTICS (Optional)
# ============================================================================

# Sentry error tracking
# SENTRY_DSN=https://your-sentry-dsn@sentry.io/project

# Google Analytics
# GA_TRACKING_ID=GA-XXXXXXXXX

# Social media integration
# FACEBOOK_APP_ID=your-facebook-app-id
# TWITTER_HANDLE=@YourTwitterHandle

# ============================================================================
# BACKUP CONFIGURATION (Production)
# ============================================================================

# Database backup settings
# BACKUP_SCHEDULE=daily
# BACKUP_RETENTION_DAYS=30
# BACKUP_STORAGE_PATH=/backups/wedding-gallery/

# Media backup settings  
# MEDIA_BACKUP_ENABLED=True
# MEDIA_BACKUP_CLOUD_STORAGE=s3://your-backup-bucket/

# ============================================================================
# NOTES & REMINDERS
# ============================================================================

# Remember to:
# 1. Change SECRET_KEY for production
# 2. Set DEBUG=False for production
# 3. Update ALLOWED_HOSTS with your domain
# 4. Configure proper database for production
# 5. Set up HTTPS and update security settings
# 6. Configure email for notifications
# 7. Set up proper logging for production
# 8. Configure regular backups
# 9. Test all settings before going live

# For more configuration options, see:
# https://docs.djangoproject.com/en/5.0/ref/settings/