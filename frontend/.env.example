# Wedding Gallery Frontend Environment Configuration
# Copy this to .env.local and update with your values

# ============================================================================
# API CONFIGURATION
# ============================================================================

# Backend API URL
# For development (default)
VITE_API_BASE_URL=http://localhost:8000

# For production, use your deployed backend URL:
# VITE_API_BASE_URL=https://your-backend-domain.com

# API request timeout (milliseconds)
VITE_API_TIMEOUT=10000

# ============================================================================
# WEDDING CUSTOMIZATION
# ============================================================================

# Wedding couple information
VITE_WEDDING_COUPLE_NAME="Sarah & John"
VITE_WEDDING_DATE="June 15, 2025"
VITE_WEDDING_VENUE="Sunset Garden Venue"
VITE_WEDDING_HASHTAG="#SarahAndJohn2025"

# Gallery customization
VITE_GALLERY_TITLE="Our Wedding Gallery"
VITE_GALLERY_SUBTITLE="Share your beautiful memories from our special day!"
VITE_WELCOME_MESSAGE="Welcome to our wedding photo gallery! Please sign up with your invitation code to share and view photos from our special day."

# ============================================================================
# UI CUSTOMIZATION
# ============================================================================

# Theme colors (Tailwind CSS classes)
VITE_PRIMARY_COLOR="rose"
VITE_SECONDARY_COLOR="pink"
VITE_ACCENT_COLOR="gold"

# Logo and branding
VITE_LOGO_URL="/images/wedding-logo.png"
VITE_FAVICON_URL="/images/favicon.ico"
VITE_BACKGROUND_IMAGE="/images/wedding-background.jpg"

# ============================================================================
# FEATURE FLAGS
# ============================================================================

# Enable/disable features
VITE_ENABLE_COMMENTS=true
VITE_ENABLE_PHOTO_DOWNLOAD=true
VITE_ENABLE_PHOTO_SHARING=true
VITE_ENABLE_GUEST_BOOK=false
VITE_ENABLE_SLIDESHOW=true
VITE_ENABLE_DARK_MODE=false

# Upload settings
VITE_MAX_FILE_SIZE_MB=10
VITE_MAX_FILES_PER_UPLOAD=5
VITE_ACCEPTED_FILE_TYPES="image/jpeg,image/jpg,image/png,image/webp,image/gif"

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================

# Image loading
VITE_LAZY_LOADING=true
VITE_IMAGE_PRELOAD_COUNT=3
VITE_THUMBNAIL_QUALITY=85

# Pagination
VITE_IMAGES_PER_PAGE=12
VITE_COMMENTS_PER_PAGE=20

# Cache settings
VITE_ENABLE_CACHE=true
VITE_CACHE_DURATION_MINUTES=30

# ============================================================================
# SOCIAL FEATURES
# ============================================================================

# Social media integration
VITE_ENABLE_SOCIAL_SHARING=true
VITE_FACEBOOK_APP_ID=""
VITE_TWITTER_HANDLE="@YourHandle"

# Guest interaction
VITE_ENABLE_PHOTO_REACTIONS=false
VITE_ENABLE_PHOTO_TAGGING=false
VITE_ENABLE_GUEST_PROFILES=true

# ============================================================================
# ANALYTICS & TRACKING (Optional)
# ============================================================================

# Google Analytics
VITE_GA_TRACKING_ID=""

# Facebook Pixel
VITE_FACEBOOK_PIXEL_ID=""

# Custom analytics
VITE_ENABLE_ANALYTICS=false
VITE_ANALYTICS_ENDPOINT=""

# ============================================================================
# PWA SETTINGS
# ============================================================================

# Progressive Web App features
VITE_ENABLE_PWA=true
VITE_APP_NAME="Wedding Gallery"
VITE_APP_SHORT_NAME="Wedding"
VITE_APP_DESCRIPTION="Our beautiful wedding photo gallery"

# PWA colors
VITE_THEME_COLOR="#f43f5e"
VITE_BACKGROUND_COLOR="#ffffff"

# ============================================================================
# DEVELOPMENT SETTINGS
# ============================================================================

# Development tools
VITE_ENABLE_DEV_TOOLS=true
VITE_LOG_LEVEL="info"

# Mock data for development
VITE_USE_MOCK_DATA=false
VITE_MOCK_DELAY_MS=500

# Hot reload settings
VITE_HMR_PORT=24678
VITE_HMR_HOST="localhost"

# ============================================================================
# NOTIFICATION SETTINGS
# ============================================================================

# Toast notifications
VITE_NOTIFICATION_DURATION=5000
VITE_ENABLE_SUCCESS_SOUNDS=false

# Error handling
VITE_SHOW_ERROR_DETAILS=false
VITE_ERROR_REPORTING_URL=""

# ============================================================================
# LOCALIZATION
# ============================================================================

# Language and locale
VITE_DEFAULT_LANGUAGE="en"
VITE_DEFAULT_TIMEZONE="America/New_York"
VITE_DATE_FORMAT="MMMM d, yyyy"
VITE_TIME_FORMAT="h:mm a"

# Currency (for any paid features)
VITE_CURRENCY="USD"
VITE_CURRENCY_SYMBOL="$"

# ============================================================================
# ACCESSIBILITY
# ============================================================================

# Accessibility features
VITE_ENABLE_HIGH_CONTRAST=false
VITE_ENABLE_REDUCED_MOTION=false
VITE_ENABLE_SCREEN_READER=true

# ============================================================================
# PLATFORM-SPECIFIC SETTINGS
# ============================================================================

# Vercel deployment
# Most settings work automatically with Vercel

# Netlify deployment  
# Most settings work automatically with Netlify

# GitHub Pages
# VITE_BASE_URL="/wedding-gallery/"

# ============================================================================
# CUSTOM PAGES
# ============================================================================

# Additional page content
VITE_ABOUT_PAGE_CONTENT="Thank you for celebrating with us! This gallery is a place to share and view photos from our special day."
VITE_CONTACT_EMAIL="couple@yourweddingdomain.com"
VITE_HELP_PAGE_URL="/help"

# Footer customization
VITE_FOOTER_TEXT="Made with ❤️ for Sarah & John's Wedding"
VITE_COPYRIGHT_YEAR="2025"

# ============================================================================
# ADVANCED CONFIGURATION
# ============================================================================

# Service Worker
VITE_SW_ENABLED=true
VITE_SW_UPDATE_CHECK_INTERVAL=60000

# Web Share API
VITE_ENABLE_WEB_SHARE=true

# Fullscreen API
VITE_ENABLE_FULLSCREEN=true

# ============================================================================
# ENVIRONMENT-SPECIFIC OVERRIDES
# ============================================================================

# These can be overridden in specific .env files:
# .env.local - Local development (gitignored)
# .env.development - Development environment
# .env.production - Production build
# .env.staging - Staging environment

# ============================================================================
# NOTES & REMINDERS
# ============================================================================

# Remember to:
# 1. Update VITE_API_BASE_URL for production
# 2. Customize wedding information
# 3. Add your logo and branding images
# 4. Configure social media integration if desired
# 5. Set up analytics tracking codes
# 6. Test all features before wedding day
# 7. Consider accessibility requirements
# 8. Optimize images for web performance

# For more information about environment variables in Vite:
# https://vitejs.dev/guide/env-and-mode.html